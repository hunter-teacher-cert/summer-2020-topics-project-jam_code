	@PostMapping("/getdetails")
	public ModelAndView getdetails(@RequestParam int aid ){
		
		ModelAndView mv = new ModelAndView ("retrieve");
		Alien alien = repo.findById(aid).orElse(null);
		
		mv.addObject(alien);
		return mv;
		
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
