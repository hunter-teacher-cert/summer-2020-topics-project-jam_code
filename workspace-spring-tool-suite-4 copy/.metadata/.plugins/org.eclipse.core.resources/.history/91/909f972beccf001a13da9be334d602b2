@Controller
public class HomeController {
	
	@Autowired
	AlienRepo repo;
	
	//@ResponseBody
	
	@RequestMapping("/")
	public String home() {
		
		return "home";
	} 
	
	@RequestMapping("/details")
	public String details(Alien alien) {
		
		repo.save(alien);
		return "home";
	} 
	
	@RequestMapping("/getdetails")
	public String getdetails() {
		
		return "answers";
	} 
	
